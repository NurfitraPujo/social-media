{
  "openapi" : "3.0.0",
  "info" : {
    "title" : "Social Media API",
    "description" : "Social Media API Specification",
    "contact" : {
      "email" : "fitrapujo@gmail.com"
    },
    "version" : "1.0.0"
  },
  "servers" : [ {
    "url" : "https://virtserver.swaggerhub.com/NurfitraPujo/social-media/1.0.0",
    "description" : "Social Media API Design"
  } ],
  "tags" : [ {
    "name" : "user",
    "description" : "User related endpoints"
  }, {
    "name" : "posts",
    "description" : "Endpoints used for post related operations"
  }, {
    "name" : "hashtag",
    "description" : "Endpoints used for hashtag related operations"
  } ],
  "paths" : {
    "/users" : {
      "get" : {
        "tags" : [ "user" ],
        "summary" : "Get all registered user",
        "description" : "Get all registered user registered\n",
        "operationId" : "getUsers",
        "responses" : {
          "200" : {
            "description" : "all users data",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/User"
                  }
                }
              }
            }
          },
          "500" : {
            "description" : "internal server errors"
          }
        }
      },
      "post" : {
        "tags" : [ "user" ],
        "summary" : "Adds a new user to the system",
        "description" : "Adds a new user to the system",
        "operationId" : "addUser",
        "requestBody" : {
          "description" : "User data to add",
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/User"
              }
            }
          }
        },
        "responses" : {
          "201" : {
            "description" : "user created"
          },
          "400" : {
            "description" : "the data provided is not valid"
          },
          "409" : {
            "description" : "user with provided username already existed"
          },
          "500" : {
            "description" : "internal server errors"
          }
        }
      }
    },
    "/users/{username}" : {
      "get" : {
        "tags" : [ "user" ],
        "summary" : "Get specific user data",
        "description" : "Get specific user data specified by username",
        "operationId" : "getUserbyId",
        "parameters" : [ {
          "name" : "username",
          "in" : "path",
          "required" : true,
          "style" : "simple",
          "explode" : false,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "user data",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/User"
                }
              }
            }
          },
          "500" : {
            "description" : "internal server errors"
          }
        }
      }
    },
    "/users/{username}/posts" : {
      "get" : {
        "tags" : [ "user" ],
        "summary" : "Get all posts that associated with the user",
        "description" : "Get all posts that associated with the  user\n",
        "operationId" : "getUserPosts",
        "parameters" : [ {
          "name" : "username",
          "in" : "path",
          "required" : true,
          "style" : "simple",
          "explode" : false,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "all posts data",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Post"
                  }
                }
              }
            }
          },
          "500" : {
            "description" : "internal server errors"
          }
        }
      }
    },
    "/post" : {
      "get" : {
        "tags" : [ "posts" ],
        "summary" : "Get all posts specified",
        "description" : "Get all post optionally filtered by query params\n",
        "operationId" : "getPosts",
        "parameters" : [ {
          "name" : "startDate",
          "in" : "query",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string"
          }
        }, {
          "name" : "endDate",
          "in" : "query",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string"
          }
        }, {
          "name" : "hashtag",
          "in" : "query",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "all posts data",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Post"
                  }
                }
              }
            }
          },
          "500" : {
            "description" : "internal server errors"
          }
        }
      },
      "post" : {
        "tags" : [ "posts" ],
        "summary" : "Create new post",
        "description" : "Create new post for user\n",
        "operationId" : "createPost",
        "requestBody" : {
          "description" : "Post data to add",
          "content" : {
            "multipart/form-data" : {
              "schema" : {
                "$ref" : "#/components/schemas/Post"
              }
            }
          }
        },
        "responses" : {
          "201" : {
            "description" : "Post is uploaded"
          },
          "400" : {
            "description" : "the data provided is not valid"
          },
          "500" : {
            "description" : "internal server errors"
          }
        }
      }
    },
    "/post/{postId}/comment" : {
      "post" : {
        "tags" : [ "posts" ],
        "summary" : "Comment on specified post",
        "description" : "Add new comment on specified post\n",
        "operationId" : "commentOnPost",
        "parameters" : [ {
          "name" : "postId",
          "in" : "path",
          "required" : true,
          "style" : "simple",
          "explode" : false,
          "schema" : {
            "type" : "integer"
          }
        } ],
        "requestBody" : {
          "description" : "Comment data to add",
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/Comment"
              }
            }
          }
        },
        "responses" : {
          "201" : {
            "description" : "Comment is uploaded"
          },
          "400" : {
            "description" : "the data provided is not valid"
          },
          "500" : {
            "description" : "internal server errors"
          }
        }
      }
    },
    "/trending" : {
      "get" : {
        "tags" : [ "hashtag" ],
        "summary" : "Get trending hashtags",
        "description" : "Get trending hashtags with count specified in query string\n",
        "operationId" : "getTrending",
        "parameters" : [ {
          "name" : "limit",
          "in" : "query",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "integer"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "list of trending hashtags",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Hashtag"
                  }
                }
              }
            }
          },
          "500" : {
            "description" : "internal server errors"
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "User" : {
        "required" : [ "bio", "dateRegistered", "email", "username" ],
        "type" : "object",
        "properties" : {
          "username" : {
            "type" : "string",
            "example" : "gengigih"
          },
          "email" : {
            "type" : "string",
            "example" : "gigih@generasigigih.com"
          },
          "bio" : {
            "type" : "string",
            "example" : "Generasi gigih program"
          },
          "dateRegistered" : {
            "type" : "string",
            "format" : "date-time",
            "example" : "2016-08-29T09:12:33.001Z"
          }
        }
      },
      "Post" : {
        "required" : [ "text", "username" ],
        "type" : "object",
        "properties" : {
          "username" : {
            "type" : "string",
            "example" : "gengigih"
          },
          "text" : {
            "maxLength" : 1000,
            "type" : "string",
            "example" : "This is post example"
          },
          "attachments" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/Attachment"
            }
          },
          "dateCreated" : {
            "type" : "string",
            "format" : "date-time",
            "example" : "2016-08-29T09:12:33.001Z"
          }
        }
      },
      "Attachment" : {
        "required" : [ "filename" ],
        "type" : "object",
        "properties" : {
          "filename" : {
            "type" : "string",
            "format" : "binary"
          }
        }
      },
      "Comment" : {
        "required" : [ "postId", "text", "username" ],
        "type" : "object",
        "properties" : {
          "username" : {
            "type" : "string",
            "example" : "gengigih"
          },
          "postId" : {
            "type" : "integer",
            "example" : 1213
          },
          "text" : {
            "maxLength" : 1000,
            "type" : "string",
            "example" : "This is post example"
          },
          "dateCreated" : {
            "type" : "string",
            "format" : "date-time",
            "example" : "2016-08-29T09:12:33.001Z"
          }
        }
      },
      "Hashtag" : {
        "required" : [ "hashtag" ],
        "type" : "object",
        "properties" : {
          "hashtag" : {
            "type" : "string",
            "example" : "gengigih"
          },
          "trends" : {
            "type" : "integer",
            "example" : 100
          },
          "lastUpdated" : {
            "type" : "string",
            "format" : "date-time",
            "example" : "2016-08-29T09:12:33.001Z"
          }
        }
      }
    },
    "requestBodies" : {
      "PostBody" : {
        "description" : "Post body ",
        "content" : {
          "application/json" : {
            "schema" : {
              "$ref" : "#/components/schemas/Post"
            }
          }
        },
        "required" : true
      }
    }
  }
}